{
  "version": "2.0.0",
  "tasks": [
      {
          "label": "Check Environment",
          "type": "shell",
          "command": "${workspaceFolder}/.vscode/task_check_environment.ps1",
          "windows": {
              "command": "powershell",
              "args": ["-ExecutionPolicy", "Bypass", "-File", "${workspaceFolder}/.vscode/task_check_environment.ps1"]
          },
          "linux": {
              "command": "${workspaceFolder}/.vscode/task_check_environment.sh"
          },
          "osx": {
              "command": "${workspaceFolder}/.vscode/task_check_environment.sh"
          },
          "runOptions": { "runOn": "folderOpen" },
          "presentation": {
              "group": "Django",
              "reveal": "silent"
          }
      },
      {
          "label": "Setup Environment for Django",
          "type": "shell",
          "command": "pipenv install --python 3.11",
          "windows": {
              "command": "pipenv",
              "args": ["install", "--python", "3.11"]
          },
          "options": {
              "cwd": "${workspaceFolder}"
          },
          "problemMatcher": [],
          "dependsOn": ["Check Environment"],
          "runOptions": { "runOn": "folderOpen" },
          "presentation": {
              "group": "Django",
              "reveal": "silent"
          }
      },
      {
          "label": "Run Django Server",
          "type": "shell",
          "command": "pipenv",
          "args": ["run", "python", "manage.py", "runserver"],
          "options": {
              "cwd": "${workspaceFolder}"
          },
          "problemMatcher": [],
          "dependsOn": ["Setup Environment for Django"],
          "presentation": {
              "group": "Django",
              "reveal": "always",
              "panel": "new"
          }
      },
      {
          "label": "Start Django Server (PowerShell)",
          "type": "shell",
          "command": "${workspaceFolder}/start_django.ps1",
          "windows": {
              "command": "powershell",
              "args": ["-ExecutionPolicy", "Bypass", "-File", "${workspaceFolder}/start_django.ps1"]
          },
          "linux": {
              "command": "${workspaceFolder}/start_django.sh"
          },
          "osx": {
              "command": "${workspaceFolder}/start_django.sh"
          },
          "options": {
              "cwd": "${workspaceFolder}"
          },
          "presentation": {
              "group": "Django",
              "reveal": "always",
              "panel": "new"
          }
      },
      {
          "label": "Run Django Migrations",
          "type": "shell",
          "command": "pipenv",
          "args": ["run", "python", "manage.py", "migrate"],
          "options": {
              "cwd": "${workspaceFolder}"
          },
          "problemMatcher": [],
          "presentation": {
              "group": "Django",
              "reveal": "always"
          }
      },
      {
          "label": "Create Django Superuser",
          "type": "shell",
          "command": "pipenv",
          "args": ["run", "python", "manage.py", "createsuperuser"],
          "options": {
              "cwd": "${workspaceFolder}"
          },
          "problemMatcher": [],
          "presentation": {
              "group": "Django",
              "reveal": "always"
          }
      },
      {
          "label": "Load Django Fixtures",
          "type": "shell",
          "command": "${workspaceFolder}/load_fixtures.ps1",
          "windows": {
              "command": "powershell",
              "args": ["-ExecutionPolicy", "Bypass", "-File", "${workspaceFolder}/load_fixtures.ps1"]
          },
          "linux": {
              "command": "${workspaceFolder}/load_fixtures.sh"
          },
          "osx": {
              "command": "${workspaceFolder}/load_fixtures.sh"
          },
          "options": {
              "cwd": "${workspaceFolder}"
          },
          "problemMatcher": [],
          "presentation": {
              "group": "Django",
              "reveal": "always"
          }
      },
      {
          "label": "Run E2E Tests",
          "type": "shell",
          "command": "pnpm",
          "args": ["test:e2e"],
          "options": {
              "cwd": "${workspaceFolder}"
          },
          "problemMatcher": [],
          "presentation": {
              "group": "Tests",
              "reveal": "always",
              "panel": "new"
          },
          "detail": "Fast E2E tests - only Chromium (~2-3 min). Use for daily development and quick iterations."
      },
      {
          "label": "Run E2E Tests (All Browsers)",
          "type": "shell",
          "command": "pnpm",
          "args": ["test:e2e:all"],
          "options": {
              "cwd": "${workspaceFolder}"
          },
          "problemMatcher": [],
          "presentation": {
              "group": "Tests",
              "reveal": "always",
              "panel": "new"
          },
          "detail": "Slow E2E tests - all browsers (Chromium, Firefox, WebKit) (~7-9 min). Use before commit/merge to main. Tests marked with @allbrowsers tag will be tested on all browsers."
      }
  ]
}
